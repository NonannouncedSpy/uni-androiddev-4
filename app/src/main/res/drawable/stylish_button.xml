<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Idle state -->
        <item android:state_pressed="false">
                <shape android:shape="rectangle">
                <solid android:color="@color/dark_purple" />
                <stroke android:color="@color/purple" android:width="5dp"/>
                <corners android:radius="10dp" />
                <padding
                    android:bottom="10dp"
                    android:top="10dp"
                    android:left="10dp"
                    android:right="10dp" />
                </shape>
        </item>

        <!-- Clicked state -->
        <item android:state_pressed="true">
                <shape android:shape="rectangle">
                        <solid android:color="@color/dark_magenta" />
                        <stroke android:color="@color/magenta" android:width="5dp"/>
                        <corners android:radius="10dp" />
                        <padding
                            android:bottom="10dp"
                            android:top="10dp"
                            android:left="10dp"
                            android:right="10dp" />
                </shape>
        </item>

</selector>